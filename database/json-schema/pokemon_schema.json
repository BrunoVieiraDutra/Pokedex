
{
    "$schema": "http://json-schema.org/schema#",
    "definitions": {
        "pokemon_info": {
            "type": "object",
            "comment": "This is a Pokemon",
            "properties": {
                "Number": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 890
                },
                "Name": {
                    "type": "string",
                    "comment": "This is the name of the Pokemon."
                },
                "Types": {
                    "type": "string",
                    "comment": "All types of the Pokemon."
                },
                "Evolutions": {
                    "type": "string",
                    "comment": "All evolutions of the Pokemon."
                },
                "path_image": {
                    "type": "string"
                }
            },
            "required": ["Number", "Name", "Types", "path_image"]
        }
    },

    "title": "Pokemon schema",
    "type": "object",
    "properties":{
        "Pokemon": {"$ref": "#/definitions/pokemon_info"}  
    }
}